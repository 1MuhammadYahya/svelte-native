{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2017",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "lib": [
            "es6",
            "dom",
            "es2017"
        ],
        "baseUrl": ".",
        "typeRoots": ["./node_modules/svelte/types", "./node_modules/@types"],
        "paths": {
            "~/*": [
                "app/*"
            ]
        }
    },
    "include": [
        "app", "types"
    ],
    "exclude": [
        "node_modules",
        "platforms"
    ]
}